<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:padding="8.0dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="18.0dp"
        android:layout_height="18.0dp"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="18.0dp"
        card_view:cardElevation="5.0dp"
        card_view:cardPreventCornerOverlap="true" >
    </android.support.v7.widget.CardView>

    <com.wookii.widget.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/friend_pic"
        android:layout_width="48.0dp"
        android:layout_height="48.0dp"
        app:w_border_width="0dp"
        android:layout_centerInParent="true"
        app:w_border_color="#ffffff" />

</RelativeLayout>